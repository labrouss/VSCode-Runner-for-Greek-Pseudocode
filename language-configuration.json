{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"]
  ],
  "autoIndent": "advanced",
  "onEnterRules": [
    {
      "beforeText": ".*(ΑΡΧΗ|ΤΟΤΕ|ΕΠΑΝΑΛΑΒΕ|BEGIN|THEN|REPEAT)$",
      "action": { "indentAction": "Indent" }
    },
    {
      "beforeText": "^\\s*(ΤΕΛΟΣ|ΕΑΝ-ΤΕΛΟΣ|ΓΙΑ-ΤΕΛΟΣ|END).*",
      "action": { "indentAction": "Outdent" }
    }
  ]
}

