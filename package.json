{
  "name": "greek-pseudorun",
  "displayName": "Greek PseudoRun",
  "description": "Interpreter and language support for Greek Pseudocode (Ψευδοκώδικας) in VS Code. Execute, debug, and learn algorithms with real-time feedback.",
  "version": "1.0.6",
  "icon": "./icons/Greek-PseudoRun.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/labrouss/VSCode-Runner-for-Greek-Pseudocode.git"
  },
  "bugs": {
    "url": "https://github.com/labrouss/VSCode-Runner-for-Greek-Pseudocode/issues"
  },
  "homepage": "https://github.com/labrouss/VSCode-Runner-for-Greek-Pseudocode#readme",
  "publisher": "KonstantinosLabroussis",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Education",
    "Snippets"
  ],
  "keywords": [
    "greek",
    "pseudocode",
    "interpreter",
    "education",
    "language",
    "gpc",
    "Ψευδοκώδικας"
  ],
  "activationEvents": [
    "onLanguage:eap",
    "onCommand:eap.run"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "eap",
        "icon": {
	"light": "./icons/Greek-PseudoRun.png",
        "dark": "./icons/Greek-PseudoRun.png"
        },
        "aliases": [
          "EAP",
          "Pseudocode",
          "Greek Pseudocode",
          "Ψευδοκώδικας"
        ],
        "extensions": [
          ".eap",
          ".gpc",
          ".ps"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "eap",
        "scopeName": "source.eap",
        "path": "./syntaxes/eap.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "eap",
        "path": "./snippets.json"
      }
    ],
    "commands": [
      {
        "command": "eap.run",
        "title": "Run EAP Program",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "eap.run",
          "group": "navigation",
          "when": "resourceLangId == eap"
        }
      ],
      "editor/context": [
        {
          "command": "eap.run",
          "group": "navigation",
          "when": "resourceLangId == eap"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.9.3"
  }
}
